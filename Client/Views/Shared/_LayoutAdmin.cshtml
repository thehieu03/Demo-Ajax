@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - News Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-nav .nav-item {
            cursor: pointer;
        }

        .navbar-nav .nav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
        }

        .navbar-nav .nav-link {
            cursor: pointer !important;
        }

        .navbar-nav .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2) !important;
            border-radius: 5px;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" href="#">
                <i class="fas fa-newspaper me-2"></i>
                News Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminCategory" ? "active" : "")"
                            asp-controller="AdminCategory" asp-action="Index">
                            <i class="fas fa-list me-1"></i>Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminNewsArticle" ? "active" : "")"
                            asp-controller="AdminNewsArticle" asp-action="Index">
                            <i class="fas fa-newspaper me-1"></i>NewsArticle
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminAccount" ? "active" : "")"
                            asp-controller="AdminAccount" asp-action="Index">
                            <i class="fas fa-users me-1"></i>Account
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AdminTag" ? "active" : "")"
                            asp-controller="AdminTag" asp-action="Index">
                            <i class="fas fa-tags me-1"></i>Tag
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Logout" asp-action="Index" class="px-3 py-1">
                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                <i class="fas fa-arrow-right-from-bracket me-1"></i> Đăng xuất
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="toastContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 9999;"></div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - News Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
