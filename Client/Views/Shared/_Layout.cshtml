@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - News Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body { padding-top: 4.5rem; }
        .navbar-nav .nav-item { cursor: pointer; }
        .navbar-nav .nav-item:hover { background-color: rgba(255,255,255,.1); border-radius: 5px; }
        .navbar-nav .nav-link { cursor: pointer !important; }
        .navbar-nav .nav-link.active { background-color: rgba(255,255,255,.2) !important; border-radius: 5px; }
        
        .avatar-sm {
            width: 40px;
            height: 40px;
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
        
        .card-header {
            border-bottom: none;
        }
        
        .table th {
            font-weight: 600;
            color: #495057;
        }
        
        .badge {
            font-size: 0.75rem;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
                <i class="fas fa-newspaper me-2"></i>
                News Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            @{
                var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var isLoggedIn = !string.IsNullOrEmpty(username);
            }

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link fw-semibold @(currentController == "Home" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                    </li>

                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-semibold @(currentController == "UserAccount" ? "active" : "")"
                               asp-controller="UserAccount" asp-action="Index">
                                <i class="fas fa-user me-1"></i> Account
                            </a>
                        </li>
                    }

                    @if (!isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link fw-semibold @(currentController == "Login" ? "active" : "")"
                               asp-controller="Login" asp-action="Index">
                                <i class="fas fa-right-to-bracket me-1"></i> Login
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" id="userMenu" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-circle-user me-1"></i> @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                <li>
                                    <a class="dropdown-item" asp-controller="NewsArticle" asp-action="Create">
                                        <i class="fas fa-plus me-2"></i> Tạo bài viết mới
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="UserAccount" asp-action="Index">
                                        <i class="fas fa-id-badge me-2"></i> Tài khoản
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="AdminAccount" asp-action="Index">
                                        <i class="fas fa-users-cog me-2"></i> Quản lý tài khoản
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="AdminTag" asp-action="Index">
                                        <i class="fas fa-tags me-2"></i> Quản lý Tag
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Logout" asp-action="Index" class="px-3 py-1">
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                            <i class="fas fa-arrow-right-from-bracket me-1"></i> Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="toastContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 9999;"></div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2024 - News Management System -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Set API base URL for JavaScript
        window.apiBaseUrl = '@Configuration["URL"]';
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
