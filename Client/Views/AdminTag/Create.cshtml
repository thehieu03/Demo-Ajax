@model Entity.ModelRequest.TagAdd

@{
    ViewData["Title"] = "Thêm Tag mới";
    Layout = "_LayoutAdmin";
}

<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <div class="d-flex align-items-center">
                        <a asp-controller="AdminTag" asp-action="Index" class="btn btn-light btn-sm me-3">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                        <div>
                            <h4 class="mb-0 fw-bold">
                                <i class="fas fa-plus me-2"></i>Thêm Tag mới
                            </h4>
                            <p class="mb-0 opacity-75">Tạo tag mới cho hệ thống</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <form asp-controller="AdminTag" asp-action="Create" method="post">
                        <div class="mb-4">
                            <label asp-for="TagName" class="form-label fw-semibold">
                                <i class="fas fa-tag text-primary me-2"></i>Tên Tag <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TagName" type="text" class="form-control form-control-lg" 
                                   placeholder="Nhập tên tag..." />
                            <span asp-validation-for="TagName" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Note" class="form-label fw-semibold">
                                <i class="fas fa-sticky-note text-primary me-2"></i>Ghi chú
                            </label>
                            <textarea asp-for="Note" class="form-control" rows="3" 
                                      placeholder="Nhập ghi chú (không bắt buộc)..."></textarea>
                            <span asp-validation-for="Note" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="AdminTag" asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Lưu Tag
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Auto-hide alerts after 5 seconds
document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        setTimeout(() => {
            if (alert.parentElement) {
                alert.remove();
            }
        }, 5000);
    });
});
</script>
