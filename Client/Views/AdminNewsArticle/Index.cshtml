
@model IEnumerable<Entity.ModelResponse.NewsArticleResponse>
@{
    ViewData["Title"] = "Admin News Article";
    Layout = "_LayoutAdmin";
}

<div class="container mt-5 pt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-newspaper me-2"></i>News Article Management
            </h2>
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="card-title mb-0">News Article List</h5>
                            <small class="text-muted">Chỉ xem và xóa</small>
                        </div>
                    </div>

                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info mb-0">Không có bài viết.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Tiêu đề</th>
                                        <th scope="col">Chuyên mục</th>
                                        <th scope="col">Nguồn</th>
                                        <th scope="col">Trạng thái</th>
                                        <th scope="col" class="text-end">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @{
                                    var index = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@index</th>
                                        <td>
                                            <div class="fw-semibold">@item.NewsTitle</div>
                                            <div class="text-muted small text-truncate" style="max-width: 480px;" title="@item.Headline">@item.Headline</div>
                                        </td>
                                        <td>@(string.IsNullOrWhiteSpace(item.CategoryName) ? "-" : item.CategoryName)</td>
                                        <td>@(string.IsNullOrWhiteSpace(item.NewsSource) ? "-" : item.NewsSource)</td>
                                        <td>
                                            @if (item.NewsStatus.GetValueOrDefault())
                                            {
                                                <span class="badge bg-success">Published</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Draft</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <form asp-controller="AdminNewsArticle" asp-action="Delete" asp-route-id="@item.NewsArticleId" method="post" class="d-inline" onsubmit="return confirm('Xác nhận xóa bài viết?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    index++;
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
