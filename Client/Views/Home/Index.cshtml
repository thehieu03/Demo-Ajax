@model Client.ControllerMvc.HomeController.DataResponse
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="hero-section bg-gradient-primary text-white py-5 mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-3 fw-bold mb-4">
                    <i class="fas fa-newspaper me-3"></i>
                    Welcome to News Management System
                </h1>
                <p class="lead fs-4 mb-0 opacity-90">
                    Discover the latest news and stay informed with our comprehensive coverage
                </p>
            </div>
        </div>
    </div>
</section>
<section class="stats-section bg-light py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-6">
                <div class="text-center p-4 bg-white rounded-3 shadow-sm">
                    <div class="text-primary fs-1 fw-bold mb-2">@(Model?.NewsArticles?.Count ?? 0)</div>
                    <div class="text-muted fw-semibold text-uppercase small">Total Articles</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="text-center p-4 bg-white rounded-3 shadow-sm">
                    <div class="text-primary fs-1 fw-bold mb-2">@(Model?.Categories?.Count ?? 0)</div>
                    <div class="text-muted fw-semibold text-uppercase small">Categories</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="text-center p-4 bg-white rounded-3 shadow-sm">
                    <div class="text-primary fs-1 fw-bold mb-2">@(Model?.NewsArticles?.Select(a =>
                                                a.AccountName).Distinct().Count() ?? 0)</div>
                    <div class="text-muted fw-semibold text-uppercase small">Authors</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="text-center p-4 bg-white rounded-3 shadow-sm">
                    <div class="text-primary fs-1 fw-bold mb-2">@(Model?.NewsArticles?.Count(a => a.NewsStatus == true)
                                                ?? 0)</div>
                    <div class="text-muted fw-semibold text-uppercase small">Active Articles</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="articles-section py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <div
                    class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                    <h2 class="section-title fw-bold text-dark mb-3 mb-md-0">
                        <i class="fas fa-newspaper me-2 text-primary"></i>
                        Latest Articles
                    </h2>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary active" data-filter="all">
                            <i class="fas fa-th-large me-1"></i>All
                        </button>
                        @if (Model?.Categories != null)
                        {
                            @foreach (var category in Model.Categories.Take(5))
                            {
                                <button type="button" class="btn btn-outline-primary" data-filter="@category.CategoryId">
                                    <i class="fas fa-tag me-1"></i>@category.CategoryName
                                </button>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @if (Model?.NewsArticles != null && Model.NewsArticles.Any())
            {
                @foreach (var article in Model.NewsArticles.Take(6))
                {
                    <div class="col" data-category="@article.CategoryId">
                        <div class="card h-100 shadow-sm border-0 rounded-3 article-card">
                            <div class="card-header @GetCategoryColor(article.CategoryName) text-white border-0 rounded-top-3">
                                <h6 class="mb-0 fw-semibold">
                                    <i class="fas fa-tag me-2"></i>@(article.CategoryName ?? "Uncategorized")
                                </h6>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold text-dark mb-3">@article.NewsTitle</h5>
                                <p class="card-text text-muted flex-grow-1">
                                    @(article.Headline?.Length > 100 ? article.Headline.Substring(0, 100) + "..." :
                                                                article.Headline)
                                </p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div class="d-flex align-items-center">
                                        <div class="@GetCategoryColor(article.CategoryName) text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                            style="width: 32px; height: 32px;">
                                            <small class="fw-bold">@GetInitials(article.AccountName)</small>
                                        </div>
                                        <div>
                                            <div class="fw-semibold small">@(article.AccountName ?? "Anonymous")</div>
                                            <div class="text-muted small">@(article.NewsStatus == true ? "Active" : "Inactive")
                                            </div>
                                        </div>
                                    </div>
                                    <a href="#" class="btn @GetCategoryColor(article.CategoryName) btn-sm">
                                        <i class="fas fa-arrow-right me-1"></i>Read More
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No articles available</h4>
                        <p class="text-muted">Check back later for the latest news.</p>
                    </div>
                </div>
            }
        </div>
        @if (Model?.NewsArticles != null && Model.NewsArticles.Count() > 6)
        {
            <div class="row mt-5">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    </div>
</section>
<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <p class="mb-0">
                    <i class="fas fa-copyright me-1"></i>
                    2025 News Management System. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>
<script src="/Js/Home.js"></script>
<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);
    }

    .article-card {
        transition: all 0.3s ease;
    }

    .article-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
    }

    .btn-group .btn {
        border-radius: 20px;
        margin: 0 2px;
        padding: 8px 16px;
        font-weight: 500;
    }

    .btn-group .btn.active {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white;
    }

    .section-title {
        position: relative;
        padding-bottom: 10px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #0d6efd, #0dcaf0);
        border-radius: 2px;
    }

    .navbar-brand {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero-section {
        background-attachment: fixed;
        position: relative;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        pointer-events: none;
    }

    .hero-section .container {
        position: relative;
        z-index: 2;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

@functions {
    private string GetCategoryColor(string? categoryName)
    {
        return categoryName?.ToLower() switch
        {
            "technology" => "bg-primary",
            "health" or "healthcare" => "bg-success",
            "business" => "bg-secondary",
            "education" => "bg-warning",
            "environment" => "bg-info",
            "sports" => "bg-danger",
            _ => "bg-primary"
        };
    }

    private string GetInitials(string? name)
    {
        if (string.IsNullOrEmpty(name))
            return "AN";

        var words = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (words.Length >= 2)
            return $"{words[0][0]}{words[1][0]}".ToUpper();
        else if (words.Length == 1)
            return words[0].Substring(0, Math.Min(2, words[0].Length)).ToUpper();
        else
            return "AN";
    }
}